{
  "name": "video-catalog-api",
  "version": "0.0.1",
  "description": "API de Catalogo de Videos",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=10.16"
  },
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run clean && npm run build",
    "test": "lb-mocha --allow-console-logs \"dist/__tests__\"",
    "posttest": "npm run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
    "docker:build": "docker build -t video-catalog-api .",
    "docker:run": "docker run -p 3000:3000 -d video-catalog-api",
    "migrate": "node ./dist/migrate",
    "openapi-spec": "node ./dist/openapi-spec",
    "prestart": "npm run build",
    "start": "node -r source-map-support/register .",
    "clean": "lb-clean dist *.tsbuildinfo .eslintcache",
    "console": "node dist/console.js"
  },
  "repository": {
    "type": "git"
  },
  "author": "ma7euus <mateuspastori@outlook.com>",
  "license": "",
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@loopback/authentication": "^3.1.0",
    "@loopback/authentication-jwt": "^0.6.0",
    "@loopback/boot": "^2.0.3",
    "@loopback/context": "^3.3.0",
    "@loopback/core": "^2.2.1",
    "@loopback/openapi-v3": "^3.1.2",
    "@loopback/repository": "^2.1.0",
    "@loopback/rest": "^6.2.0",
    "@loopback/rest-crud": "^0.8.19",
    "@loopback/rest-explorer": "^2.0.3",
    "@loopback/security": "^0.2.18",
    "@loopback/service-proxy": "^2.0.3",
    "amqp-connection-manager": "^3.2.1",
    "amqplib": "^0.6.0",
    "chalk": "github:chalk/chalk",
    "dotenv": "^8.2.0",
    "lodash": "^4.17.20",
    "loopback-connector-esv6": "https://github.com/codeedu/loopback-connector-elastic-search/tarball/master",
    "tslib": "^2.0.3"
  },
  "devDependencies": {
    "@loopback/build": "^5.0.1",
    "@loopback/eslint-config": "^6.0.3",
    "@loopback/testlab": "^3.0.0",
    "@types/amqplib": "^0.5.13",
    "@types/amqp-connection-manager": "^2.0.10",
    "@types/lodash": "^4.14.152",
    "@types/node": "^10.17.19",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-eslint-plugin": "^2.2.1",
    "eslint-plugin-mocha": "^6.3.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.8.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "~3.8.3"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src/"
    ],
    "ext": ".ts",
    "exec": "npm start"
  }
}
